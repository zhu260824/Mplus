<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_159PX"
        android:background="@color/blue_bg"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="@dimen/DIMEN_66PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_48PX" />

        <LinearLayout
            android:id="@+id/right_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="@dimen/DIMEN_66PX"
                android:layout_height="@dimen/DIMEN_66PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:scaleType="centerInside"
                android:src="@drawable/login_person_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_48PX" />
        </LinearLayout>
    </RelativeLayout>

    <com.mplus.mplus.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_90PX"
            android:layout_marginRight="@dimen/DIMEN_90PX"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/DIMEN_360PX"
                android:layout_height="@dimen/DIMEN_292PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/DIMEN_120PX"
                android:layout_marginTop="@dimen/DIMEN_120PX"
                android:src="@drawable/m_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_136PX"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_phone" />

                <EditText
                    android:id="@+id/et_phone_register"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/text_userloading_name"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/text_dark_grey"
                    android:textColorHint="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_44PX" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_2PX"
                android:background="@color/line_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_136PX"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:background="@drawable/login_getcap"
                    android:scaleType="centerInside" />

                <EditText
                    android:id="@+id/et_verification_register"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/text_reset_register_verification_code"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_dark_grey"
                    android:textColorHint="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/DIMEN_90PX"
                    android:background="@drawable/round_getcode_unselced"
                    android:gravity="center"
                    android:paddingLeft="@dimen/DIMEN_30PX"
                    android:paddingRight="@dimen/DIMEN_30PX"
                    android:text="@string/text_reset_register_gain_verification_code"
                    android:textColor="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_36PX" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_2PX"
                android:background="@color/line_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_136PX"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/login_prassword"
                    android:scaleType="centerInside" />

                <EditText
                    android:id="@+id/et_password_register"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/text_reset_register_input_new_passwrod"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/text_dark_grey"
                    android:textColorHint="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <ImageView
                    android:id="@+id/iv_password_register"
                    android:layout_width="@dimen/DIMEN_54PX"
                    android:layout_height="@dimen/DIMEN_54PX"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/password_hide" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_2PX"
                android:background="@color/line_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_80PX"
                android:layout_marginTop="@dimen/DIMEN_40PX"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lin_agress_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_checkbox_on_register"
                        android:layout_width="@dimen/DIMEN_36PX"
                        android:layout_height="@dimen/DIMEN_36PX"
                        android:background="@drawable/checkbox_on"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:text="@string/text_reset_register_agree_clause"
                        android:textColor="@color/text_light_grey"
                        android:textSize="@dimen/DIMEN_36PX" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_clause_volue_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_reset_register_user_treaty"
                    android:textColor="@color/blue_bg"
                    android:textSize="@dimen/DIMEN_36PX" />
            </LinearLayout>

            <Button
                android:id="@+id/but_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_120PX"
                android:background="@drawable/bg_blue_btn"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_44PX" />
        </LinearLayout>
    </com.mplus.mplus.view.MyScrollView>

</LinearLayout>