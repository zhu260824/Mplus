<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/DIMEN_900PX"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_140PX"
            android:gravity="center"
            android:text="@string/text_newversion_find"
            android:textColor="@color/blue_bg"
            android:textSize="@dimen/DIMEN_48PX" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="@color/blue_bg" />

        <TextView
            android:id="@+id/tv_nowversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_60PX"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_40PX" />

        <TextView
            android:id="@+id/tv_newversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_40PX" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:text="@string/text_newversion_content"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_40PX" />

        <TextView
            android:id="@+id/tv_upcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_40PX" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="@dimen/DIMEN_360PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:background="@drawable/bg_blue_btn"
                android:gravity="center"
                android:text="@string/text_newversion_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_44PX" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/DIMEN_360PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                android:background="@drawable/items_button_red"
                android:text="@string/text_newversion_cancle"
                android:textColor="@color/blue_bg"
                android:textSize="@dimen/DIMEN_44PX" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_ignore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_80PX"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_ignore"
                android:layout_width="@dimen/DIMEN_30PX"
                android:layout_height="@dimen/DIMEN_30PX"
                android:src="@drawable/checkbox_off" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:text="@string/text_newversion_ignore"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_40PX" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>