<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_159PX"
        android:background="@color/blue_bg"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/DIMEN_66PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_login"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_48PX" />
    </RelativeLayout>

    <com.mplus.mplus.view.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/DIMEN_300PX"
                android:layout_height="@dimen/DIMEN_300PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/DIMEN_60PX"
                android:layout_marginTop="@dimen/DIMEN_80PX"
                android:src="@drawable/m_icon" />

            <LinearLayout
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="@dimen/DIMEN_129PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/loading_phone" />

                <EditText
                    android:id="@+id/et_name_loading"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/text_userloading_name"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/text_dark_grey"
                    android:textColorHint="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <ImageView
                    android:id="@+id/login_phone_clean"
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_clean_icon" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="@dimen/DIMEN_2PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:background="@color/line_light_grey" />

            <LinearLayout
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/loading_prassword"
                    android:scaleType="centerInside" />

                <EditText
                    android:id="@+id/et_password_loading"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/text_userloading_password"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/text_dark_grey"
                    android:textColorHint="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <ImageView
                    android:id="@+id/login_pwd_show"
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/password_hide" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="@dimen/DIMEN_2PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:background="@color/line_light_grey" />

            <LinearLayout
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/DIMEN_80PX"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_40PX"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lin_loading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/DIMEN_40PX"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ibut_checkbox_on_loading"
                        android:layout_width="@dimen/DIMEN_36PX"
                        android:layout_height="@dimen/DIMEN_36PX"
                        android:scaleType="centerInside"
                        android:background="@drawable/checkbox_on" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_40PX"
                        android:text="@string/text_userloading_remember_the_password"
                        android:textColor="@color/blue_bg"
                        android:textSize="@dimen/DIMEN_40PX" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_forget_the_password_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/text_userloading_forget_the_password"
                    android:textColor="@color/blue_bg"
                    android:textSize="@dimen/DIMEN_40PX" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLoading"
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:background="@drawable/bg_blue_btn"
                android:text="@string/text_userloading_register"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_44PX" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_40PX"
                android:background="@drawable/bg"
                android:text="@string/text_immediately_register"
                android:textColor="@color/blue_bg"
                android:textSize="@dimen/DIMEN_44PX" />

            <RelativeLayout
                android:layout_width="@dimen/DIMEN_750PX"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_70PX"
                android:orientation="horizontal" >

                <View
                    android:layout_width="@dimen/DIMEN_284PX"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:layout_toLeftOf="@+id/tv_zhongjianxian"
                    android:background="@color/blue_bg" />

                <TextView
                    android:id="@+id/tv_zhongjianxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/text_other_count_load"
                    android:textColor="@color/blue_bg"
                    android:textSize="@dimen/DIMEN_36PX" />

                <View
                    android:layout_width="@dimen/DIMEN_284PX"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_toRightOf="@+id/tv_zhongjianxian"
                    android:background="@color/blue_bg" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_60PX"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ibut_qq"
                    android:layout_width="@dimen/DIMEN_160PX"
                    android:layout_height="@dimen/DIMEN_160PX"
                    android:layout_marginLeft="@dimen/DIMEN_105PX"
                    android:scaleType="centerInside"
                    android:src="@drawable/qq_icon" />

                <ImageView
                    android:id="@+id/ibut_weixin"
                    android:layout_width="@dimen/DIMEN_160PX"
                    android:layout_height="@dimen/DIMEN_160PX"
                    android:layout_marginLeft="@dimen/DIMEN_105PX"
                    android:scaleType="centerInside"
                    android:src="@drawable/weixin_icon" />

                <ImageView
                    android:id="@+id/ibut_sina"
                    android:layout_width="@dimen/DIMEN_160PX"
                    android:layout_height="@dimen/DIMEN_160PX"
                    android:layout_marginLeft="@dimen/DIMEN_105PX"
                    android:scaleType="centerInside"
                    android:src="@drawable/weibo_icon" />
            </LinearLayout>
        </LinearLayout>
    </com.mplus.mplus.view.MyScrollView>

</LinearLayout>