<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/DIMEN_876PX"
    android:layout_height="@dimen/DIMEN_900PX"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:background="@drawable/uploading_video" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:background="#00000000"
        android:hint="请输入视频的正确链接" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:layout_marginBottom="@dimen/DIMEN_60PX"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:background="@color/line_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="@dimen/DIMEN_260PX"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="@color/text_blue_color"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/DIMEN_260PX"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="@color/text_grey_color_two"
            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_60PX"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>