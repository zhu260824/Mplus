<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_interface_background"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_video"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/DIMEN_60PX"
            android:paddingTop="@dimen/DIMEN_60PX" >

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_ico"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_200PX"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="centerCrop"
                android:src="@drawable/person_default"
                app:siBorderColor="@color/white"
                app:siBorderWidth="0dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_20PX"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="@dimen/DIMEN_60PX"
                        android:layout_height="@dimen/DIMEN_60PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:scaleType="centerInside"
                        />

                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/DIMEN_60PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:gravity="center"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/DIMEN_10PX"
                        android:paddingRight="@dimen/DIMEN_10PX"
                        android:background="@drawable/bg_cyan_shape"
                        android:textColor="@color/white"
                        android:textSize="@dimen/DIMEN_32PX" />

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/DIMEN_60PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:layout_marginRight="@dimen/DIMEN_10PX"
                        android:paddingLeft="@dimen/DIMEN_10PX"
                        android:paddingRight="@dimen/DIMEN_10PX"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_yellow_shape"
                        android:textSize="@dimen/DIMEN_32PX" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/DIMEN_60PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/bg_red_tag"
                        android:textColor="@color/white"
                         android:paddingLeft="@dimen/DIMEN_10PX"
                        android:paddingRight="@dimen/DIMEN_10PX"
                        android:textSize="@dimen/DIMEN_32PX" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="@color/line_light_grey" />

        <LinearLayout
            android:id="@+id/lin_tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/DIMEN_140PX"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actor_user_tag"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/DIMEN_40PX" />

                <include layout="@layout/tag_project_list" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/DIMEN_2PX"
                android:background="@color/line_light_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_40PX"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:lineSpacingExtra="@dimen/DIMEN_30PX"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_40PX" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="@color/line_light_grey" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_60PX"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:lineSpacingExtra="@dimen/DIMEN_30PX"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_40PX" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_photolist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/DIMEN_60PX"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/DIMEN_60PX" >

            <ImageView
                android:layout_width="@dimen/DIMEN_66PX"
                android:layout_height="@dimen/DIMEN_66PX"
                android:scaleType="centerInside"
                android:src="@drawable/actor_user_photo_list" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                android:text="@string/actor_user_photo_list"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_44PX" />
            
             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_arrows" />
        </LinearLayout>

        <HorizontalScrollView 
            android:id="@+id/horscroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:scrollbars="none"
            >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/lin_photos"
                ></LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/DIMEN_40PX"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX"
        android:paddingTop="@dimen/DIMEN_60PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/DIMEN_66PX"
                android:layout_height="@dimen/DIMEN_66PX"
                android:scaleType="centerInside"
                android:src="@drawable/actor_user_perform_history" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                android:text="@string/actor_user_perform_history"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_44PX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>