<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_interface_background"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_70PX"
        android:paddingRight="@dimen/DIMEN_70PX" >

        <LinearLayout
            android:id="@+id/ly_system_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:background="@drawable/bg_list_all"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_information_centre_project"
                android:layout_width="@dimen/DIMEN_66PX"
                android:layout_height="@dimen/DIMEN_66PX"
                android:background="@drawable/system_feedback" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/text_system_feedback"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_44PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_arrows" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="@color/line_light_grey" />

        <LinearLayout
            android:id="@+id/ly_system_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:background="@drawable/bg_list_all"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_information_centre_invite"
                android:layout_width="@dimen/DIMEN_66PX"
                android:layout_height="@dimen/DIMEN_66PX"
                android:background="@drawable/system_version" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/text_system_check_version"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_44PX" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_nowversion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:gravity="center_vertical"
                    android:text="@string/text_now_version"
                    android:textColor="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_32PX" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/right_arrows" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="@color/line_light_grey" />

        <LinearLayout
            android:id="@+id/ly_system_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:background="@drawable/bg_list_all"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_information_centre_stand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/system_about" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/text_system_aboutme"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_44PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_arrows" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_2PX"
            android:background="@color/line_light_grey" />

        <LinearLayout
            android:id="@+id/ly_system_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:background="@drawable/bg_list_all"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/system_clean" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/text_system_clean"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_44PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_arrows" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>