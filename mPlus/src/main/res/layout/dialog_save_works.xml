<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/DIMEN_900PX"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:paddingBottom="@dimen/DIMEN_60PX"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_161PX"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="年份"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_40PX" />

            <com.mplus.mplus.view.ContainsEmojiEditText
                android:id="@+id/et_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_40PX" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="年"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_40PX" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_light_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_161PX"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="影片名称"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_40PX" />

            <com.mplus.mplus.view.ContainsEmojiEditText
                android:id="@+id/et_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_40PX" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_light_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_161PX"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="饰演角色"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_40PX" />

            <com.mplus.mplus.view.ContainsEmojiEditText
                android:id="@+id/et_role"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_40PX" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_light_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_161PX"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_160PX"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="参与角色"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_40PX" />

            <com.mplus.mplus.view.ContainsEmojiEditText
                android:id="@+id/et_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/DIMEN_40PX" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_light_grey" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX"
        android:text="剧照"
        android:textColor="@color/text_dark_grey"
        android:textSize="@dimen/DIMEN_40PX" />

    <ImageView
        android:id="@+id/iv_ico"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_460PX"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:scaleType="centerCrop"
        android:src="@drawable/uploading_actorhistory_photo" />

    <com.mplus.mplus.view.ContainsEmojiEditText
        android:id="@+id/et_videourl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:background="#00000000"
        android:hint="请输入视频的正确链接"
        android:textSize="@dimen/DIMEN_40PX"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:layout_marginBottom="@dimen/DIMEN_60PX"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:background="@color/line_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/DIMEN_40PX"
        android:paddingRight="@dimen/DIMEN_40PX" >

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="@dimen/DIMEN_260PX"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="@color/text_blue_color"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/DIMEN_260PX"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_marginLeft="@dimen/DIMEN_60PX"
            android:background="@color/text_grey_color_two"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>