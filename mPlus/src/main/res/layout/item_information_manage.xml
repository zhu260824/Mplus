<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_34PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_information_onoff"
            android:layout_width="@dimen/DIMEN_36PX"
            android:layout_height="@dimen/DIMEN_36PX"
            android:layout_marginLeft="@dimen/DIMEN_18PX"
            android:background="@drawable/message_off"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_52PX"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_160PX"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_information_read_onoff"
                    android:layout_width="@dimen/DIMEN_66PX"
                    android:layout_height="@dimen/DIMEN_66PX"
                    android:scaleType="centerCrop"
                    android:src="@drawable/message_read_on" />

                <TextView
                    android:id="@+id/tv_information_manage_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_light_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <TextView
                    android:id="@+id/tv_information_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_40PX"
                    android:textColor="@color/line_light_grey"
                    android:textSize="@dimen/DIMEN_32PX" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_2PX"
                android:background="@color/line_light_grey" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>