<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:layout_marginTop="@dimen/DIMEN_150PX" >

        <ImageView
            android:layout_width="@dimen/DIMEN_66PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_phone"
            android:contentDescription="@string/app_name" />

        <com.mplus.mplus.view.ContainsEmojiEditText
            android:id="@+id/et_mobile_reset_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:background="@color/white"
            android:hint="@string/text_userloading_name"
            android:singleLine="true"
            android:textColor="@color/text_dark_grey"
            android:textColorHint="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:background="@color/line_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_reset_password"
            android:layout_width="@dimen/DIMEN_66PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_getcap"
            android:contentDescription="@string/app_name" />

        <com.mplus.mplus.view.ContainsEmojiEditText
            android:id="@+id/et_verification_code_reset_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/iv_reset_password"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/text_reset_register_verification_code"
            android:singleLine="true"
            android:textColor="@color/text_dark_grey"
            android:textColorHint="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_90PX"
            android:background="@drawable/round_getcode_unselced"
            android:gravity="center"
            android:paddingLeft="@dimen/DIMEN_30PX"
            android:paddingRight="@dimen/DIMEN_30PX"
            android:text="@string/text_reset_register_gain_verification_code"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_36PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:background="@color/line_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv1_reset_password"
            android:layout_width="@dimen/DIMEN_66PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/login_prassword" />

        <com.mplus.mplus.view.ContainsEmojiEditText
            android:id="@+id/et_password_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/text_reset_register_input_new_passwrod"
            android:maxLength="18"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/text_dark_grey"
            android:textColorHint="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <ImageButton
            android:id="@+id/ibut_password_one_show"
            android:layout_width="@dimen/DIMEN_54PX"
            android:layout_height="@dimen/DIMEN_54PX"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:background="@drawable/password_hide" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:background="@color/line_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv2_reset_password"
            android:layout_width="@dimen/DIMEN_66PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/login_prassword" />

        <com.mplus.mplus.view.ContainsEmojiEditText
            android:id="@+id/et_password_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/text_reset_register_input_new_passwrod_agren"
            android:maxLength="18"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/text_dark_grey"
            android:textColorHint="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <ImageButton
            android:id="@+id/ibut_password_two_show"
            android:layout_width="@dimen/DIMEN_54PX"
            android:layout_height="@dimen/DIMEN_54PX"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:background="@drawable/password_hide" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:background="@color/line_light_grey" />

    <Button
        android:id="@+id/but_reset_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_120PX"
        android:layout_marginLeft="@dimen/DIMEN_70PX"
        android:layout_marginRight="@dimen/DIMEN_70PX"
        android:layout_marginTop="@dimen/DIMEN_150PX"
        android:background="@drawable/bg_blue_btn"
        android:text="@string/text_register_reset_password"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_48PX" />

</LinearLayout>