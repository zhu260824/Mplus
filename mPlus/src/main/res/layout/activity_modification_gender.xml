<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_interface_background"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/rl_man_modification_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_160PX"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_70PX"
        android:paddingRight="@dimen/DIMEN_70PX" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ibut_delete_modification_nickname"
            android:gravity="center_vertical"
            android:text="@string/login_man"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <ImageButton
            android:id="@+id/ibut_woman_modification_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/modification_gender_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:background="@color/line_light_grey"
        android:paddingLeft="@dimen/DIMEN_70PX"
        android:paddingRight="@dimen/DIMEN_70PX" />

    <RelativeLayout
        android:id="@+id/rl_woman_modification_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_160PX"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_70PX"
        android:paddingRight="@dimen/DIMEN_70PX" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ibut_delete_modification_nickname"
            android:gravity="center_vertical"
            android:text="@string/login_woman"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <ImageButton
            android:id="@+id/ibut_man_modification_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/modification_gender_check"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>