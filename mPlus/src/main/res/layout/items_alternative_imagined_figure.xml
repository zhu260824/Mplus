<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_460PX"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DIMEN_60PX"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/DIMEN_160PX"
            android:layout_height="@dimen/DIMEN_340PX"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/blue_point" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pic_alternative"
            android:layout_width="@dimen/DIMEN_340PX"
            android:layout_height="@dimen/DIMEN_340PX"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name_alternative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_40PX"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/DIMEN_44PX" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_sex_alternative"
                    android:layout_width="@dimen/DIMEN_46PX"
                    android:layout_height="@dimen/DIMEN_46PX"
                    android:layout_marginLeft="@dimen/DIMEN_5PX"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_gender_man" />

                <TextView
                    android:id="@+id/tv_height_alternative"
                    android:layout_width="@dimen/DIMEN_110PX"
                    android:layout_height="@dimen/DIMEN_46PX"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:background="@drawable/bg_cyan_shape"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DIMEN_26PX" />

                <TextView
                    android:id="@+id/tv_weight_alternative"
                    android:layout_width="@dimen/DIMEN_92PX"
                    android:layout_height="@dimen/DIMEN_46PX"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:background="@drawable/bg_yellow_shape"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DIMEN_26PX" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_inform_alternative"
                android:layout_width="@dimen/DIMEN_240PX"
                android:layout_height="@dimen/DIMEN_80PX"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:background="@drawable/bg_blue_background"
                android:gravity="center"
                android:text="通知试镜"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/DIMEN_36PX" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:layout_marginLeft="@dimen/DIMEN_60PX"
        android:layout_marginRight="@dimen/DIMEN_60PX"
        android:background="@color/text_light_grey" />

</LinearLayout>