    <LinearLayout
        android:id="@+id/lin_need_experience"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_160PX"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_need_experience"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/checkbox_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/project_need_experience"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:background="@color/line_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_60PX"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/blue_bg"
            android:textSize="@dimen/DIMEN_44PX"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_describe"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />
    </LinearLayout>

    <com.mplus.mplus.view.ContainsEmojiEditText
        android:id="@+id/et_depict"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/chat_dialog_box"
        android:ems="10"
        android:gravity="top|left"
        android:padding="5dp"
        android:textColor="@color/text_light_grey"
        android:textSize="@dimen/DIMEN_44PX" />

