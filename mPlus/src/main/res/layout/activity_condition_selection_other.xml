<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 导航条 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_159PX"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/select_other_concel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <TextView
            android:id="@+id/select_other_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="身高"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/DIMEN_48PX" />
<!-- 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" /> -->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/line_light_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_30PX"
        android:background="@color/main_interface_background" />

    <ListView
        android:id="@+id/height_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/line_light_grey" 
        android:dividerHeight="@dimen/DIMEN_1PX"
        android:layout_marginBottom="@dimen/DIMEN_60PX" />
   
</LinearLayout>