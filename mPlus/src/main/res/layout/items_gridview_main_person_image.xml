<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/lin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_ico"
                android:layout_width="@dimen/DIMEN_490PX"
                android:layout_height="@dimen/DIMEN_490PX"
                android:src="@drawable/test1"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_120PX"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/DIMEN_20PX"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/DIMEN_44PX" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="@dimen/DIMEN_46PX"
                        android:layout_height="@dimen/DIMEN_46PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:scaleType="centerInside"
                        android:src="@drawable/image_gender_man"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="@dimen/DIMEN_110PX"
                        android:layout_height="@dimen/DIMEN_46PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/text_tag_main"
                        android:textSize="@dimen/DIMEN_30PX" />

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="@dimen/DIMEN_92PX"
                        android:layout_height="@dimen/DIMEN_46PX"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:layout_marginRight="@dimen/DIMEN_10PX"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/text_tag_main"
                        android:textSize="@dimen/DIMEN_30PX" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_2PX"
                android:visibility="gone"
                android:background="@color/text_light_grey" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_text"
        android:layout_width="@dimen/DIMEN_490PX"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_10PX" >

        <View
            android:layout_width="@dimen/DIMEN_14PX"
            android:layout_height="@dimen/DIMEN_120PX"
            android:background="#f44652" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:text="@string/main_groom_person"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/DIMEN_48PX" />
    </LinearLayout>


</RelativeLayout>
