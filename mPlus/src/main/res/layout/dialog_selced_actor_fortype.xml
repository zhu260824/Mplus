<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/DIMEN_900PX"
    android:layout_height="@dimen/DIMEN_500PX"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_120PX" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/project_add_actor"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/DIMEN_40PX"
            android:text="@string/cancel"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/DIMEN_44PX" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/line_light_grey" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="@dimen/DIMEN_600PX"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:background="@color/blue_bg"
        android:gravity="center"
        android:text="搜索演员"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_44PX" />

    <TextView
        android:id="@+id/tv_for_collect"
        android:layout_width="@dimen/DIMEN_600PX"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/DIMEN_60PX"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:background="@color/blue_bg"
        android:gravity="center"
        android:text="从收藏添加"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_44PX" />

</LinearLayout>